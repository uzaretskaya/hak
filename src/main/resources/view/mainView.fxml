<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.media.MediaView?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.hackathon.controller.MainViewController">
    <VBox>
        <MediaView fx:id="video" fitHeight="600.0" fitWidth="700.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="0.0"/>
        <ButtonBar>
            <buttons>
                <Button fx:id="btPlay" mnemonicParsing="false" onAction="#methodPlay" text="play"/>
                <Button fx:id="btPause" mnemonicParsing="false" onAction="#methodPause" text="pause"/>
                <Button fx:id="btStop" mnemonicParsing="false" onAction="#methodStop" text="stop"/>
                <Button fx:id="btNext" mnemonicParsing="false" onAction="#methodNext" text="next"/>
            </buttons>
        </ButtonBar>
        <TableView fx:id="tableCameras" AnchorPane.bottomAnchor="0.0" maxHeight="250">
            <columns>
                <TableColumn prefWidth="350.0" text="Camera_id" fx:id="cameraIDColumn"/>
                <TableColumn prefWidth="150.0" text="Video path" fx:id="videoPathColumn"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
